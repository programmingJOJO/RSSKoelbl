<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widget_layout" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:orientation="vertical"
	android:padding="5dip" style="@style/background">

	<!-- web site title -->
	<TextView android:id="@+id/widget_title" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingTop="8dip"
		android:paddingLeft="8dip" android:paddingBottom="4dip"
		android:textSize="18dip" style="@style/background"/>

	<!-- web site url -->
	<TextView android:id="@+id/widget_text" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:paddingLeft="8dip"
		android:paddingBottom="6dip" style="@style/smallText"
		android:layout_below="@id/widget_title" />

</RelativeLayout>