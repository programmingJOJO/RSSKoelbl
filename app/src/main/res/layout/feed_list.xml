<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/feedListLayout" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical">

	<ListView android:id="@+id/list" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:divider="#bababa"
		android:dividerHeight="1dp" android:cacheColorHint="#00000000" />
	
	<TextView android:id="@android:id/empty" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:text="@string/no_feeds" 
		android:gravity="center" />
</RelativeLayout>